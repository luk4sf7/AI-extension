{
  "manifest_version": 3,
  "name": "AI:SSOCIATE",
  "description": "Stelle Fragen an AI:SSOCIATE direkt aus deinem Browser.",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "128": "icons/icon-128.png"
    }
  },
  "permissions": ["storage"],
  "host_permissions": ["http://localhost:3001/*"],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "128": "icons/icon-128.png"
  }
}
